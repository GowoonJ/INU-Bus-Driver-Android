<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Activity.OnOff"
	    android:id="@+id/content_on_off"
		android:background="@color/background_white">

	<TextView
		android:id="@+id/tv_title"
		android:theme="@style/TextThemeTitle"
		style="@style/TextThemeTitle"
		android:text=""
		android:layout_marginTop="62.5dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
	/>

	<TextView
		android:theme="@style/TextThemeSub"
		style="@style/TextThemeSub"
		android:text="버튼을 누르시면, GPS가 자동으로 켜집니다."
		app:layout_constraintTop_toBottomOf="@id/tv_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:id="@+id/tv_off_sub" />

	<TextView
		android:id="@+id/tv_route_off"
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_marginTop="23.5dp"
		android:gravity="center"
		android:text="송내"
		android:textColor="#fff"
		android:textSize="19sp"
		android:paddingStart="45dp"
		android:paddingEnd="45dp"
		android:background="@drawable/round_rectangle_29dp"
		app:layout_constraintTop_toBottomOf="@+id/tv_off_sub"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<TextView
		android:id="@+id/tv_route_on"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="23.5dp"
		android:gravity="center"
		android:text="송내"
		android:textColor="@color/bright_blue"
		android:textSize="19sp"
		android:paddingStart="45dp"
		android:paddingEnd="45dp"
		android:backgroundTint="#fff"
		android:visibility="invisible"
		android:background="@drawable/round_rectangle_29dp"
		app:layout_constraintTop_toBottomOf="@+id/tv_on_sub"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<TextView
		android:theme="@style/TextThemeSub"
		style="@style/TextThemeSub"
		android:textColor="#fff"
		android:text="버튼을 다시 누르시면, 운행모드가 종료됩니다."
		android:visibility="invisible"
		app:layout_constraintTop_toBottomOf="@id/tv_title"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:id="@+id/tv_on_sub" />

	<ImageButton
		android:id="@+id/btn_off"
		android:src="@drawable/off_btn"
		android:layout_width="283dp"
		android:layout_height="283dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:background="@drawable/ripple_off_btn"
		android:layout_marginTop="28.5dp"
		app:layout_constraintTop_toBottomOf="@+id/tv_route_off" />

	<ImageButton
		android:id="@+id/btn_on"
		android:src="@drawable/on_btn"
		android:layout_width="312.5dp"
		android:layout_height="312.5dp"
		android:visibility="invisible"
		android:background="@drawable/ripple_on_btn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="26.8dp"
		app:layout_constraintTop_toBottomOf="@+id/tv_route_on" />

	<TextView
		android:id="@+id/tv_off"
		android:layout_width="wrap_content"
		android:layout_height="41dp"
		android:text="OFF"
		android:textSize="30sp"
		android:textColor="@color/baby_blue"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginBottom="62.5dp"
		app:layout_constraintBottom_toBottomOf="parent" />

	<TextView
		android:id="@+id/tv_on"
		android:layout_width="wrap_content"
		android:layout_height="41dp"
		android:text="ON"
		android:textSize="30sp"
		android:textColor="#fff"
		android:visibility="invisible"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginBottom="62.5dp"
		app:layout_constraintBottom_toBottomOf="parent" />

	<ImageButton
		android:src="@drawable/back_arrow"
		android:layout_width="43dp"
		android:layout_height="43dp"
		android:id="@+id/iv_back"
		android:background="#00ffffff"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>