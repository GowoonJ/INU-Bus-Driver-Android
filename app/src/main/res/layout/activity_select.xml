<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Activity.Select"
	android:background="@color/background_white"
    android:theme="@style/AppTheme"
	style="@style/AppTheme"
	>

   <TextView
	   android:id="@+id/tv_select_hi"
	   android:layout_width="wrap_content"
	   android:layout_height="32dp"
	   android:textColor="@color/bright_blue"
	   android:textSize="23sp"
	   android:text="기사님, 안녕하세요!"
	   android:layout_marginTop="50.5dp"
	   app:layout_constraintStart_toStartOf="parent"
	   app:layout_constraintEnd_toEndOf="parent"
	   app:layout_constraintTop_toTopOf="parent"
	   android:fontFamily="@font/notosans_light"
   />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="32dp"
       android:textColor="@color/bright_blue"
       android:textSize="23sp"
       android:text=""
       android:fontFamily="@font/notosans_light"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tv_select_hi"
       android:id="@+id/tv_select_question"
   />

   <ListView
	   android:id="@+id/list_view_select"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:layout_marginTop="34.5dp"
	   android:layout_marginStart="80.4dp"
	   android:layout_marginEnd="79.4dp"
	   android:divider="@color/background_white"
	   android:dividerHeight="33dp"

	   tools:listitem="@layout/item_recycler_select_route"
	   tools:itemCount="5"
	   app:layout_constraintEnd_toEndOf="parent"
	   app:layout_constraintTop_toBottomOf="@+id/tv_select_question"
	   app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>