<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Select"
		android:background="@color/background_white">

   <TextView
		   android:id="@+id/tv_select_hi"
		   android:layout_width="wrap_content"
		   android:layout_height="29dp"
		   android:textColor="@color/bright_blue"
		   android:textSize="21sp"
		   android:text="기사님, 안녕하세요!"
		   android:layout_marginTop="62.5dp"
		   app:layout_constraintStart_toStartOf="parent"
		   app:layout_constraintEnd_toEndOf="parent"
		   app:layout_constraintTop_toTopOf="parent"
			 />

   <TextView android:layout_width="wrap_content"
			 android:layout_height="29dp"
			 android:textColor="@color/bright_blue"
			 android:textSize="21sp"
			 android:text="어떤 노선을 이용하시겠어요?"
			 android:layout_marginTop="3dp"
			 app:layout_constraintStart_toStartOf="parent"
			 app:layout_constraintEnd_toEndOf="parent"
			 app:layout_constraintTop_toBottomOf="@+id/tv_select_hi"
			 android:id="@+id/tv_select_question" />

   <ListView
	   android:id="@+id/list_view_select"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:layout_marginTop="55.5dp"
	   android:layout_marginStart="88dp"
	   android:layout_marginEnd="87dp"
		android:divider="@color/background_white"
	   android:dividerHeight="23dp"
	   tools:listitem="@layout/item_recycler_select_route"
	   tools:itemCount="5"
	   app:layout_constraintEnd_toEndOf="parent"
	   app:layout_constraintTop_toBottomOf="@+id/tv_select_question"
	   app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>