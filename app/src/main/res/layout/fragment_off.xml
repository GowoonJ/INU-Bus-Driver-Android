<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".Fragment.OffFragment">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/tv_off_title"
			android:theme="@style/TextThemeTitle"
			style="@style/TextThemeTitle"
			android:text="운행을 시작하시겠습니까?"
			android:layout_marginTop="62.5dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
		/>

		<TextView android:theme="@style/TextThemeSub"
			style="@style/TextThemeSub"
			android:text="버튼을 누르시면, GPS가 자동으로 켜집니다."
			app:layout_constraintTop_toBottomOf="@id/tv_off_title"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:id="@+id/tv_off_sub" />

		<ImageButton
			android:id="@+id/btn_off"
			android:src="@drawable/off_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="84.5dp"
			android:background="#00ffffff"
			app:layout_constraintTop_toBottomOf="@+id/tv_off_sub" />

		<TextView android:id="@+id/tv_off"
			android:layout_width="wrap_content"
			android:layout_height="41dp"
			android:text="OFF"
			android:textSize="30sp"
			android:textColor="@color/baby_blue"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginBottom="112.5dp"
			app:layout_constraintBottom_toBottomOf="parent" />

	</android.support.constraint.ConstraintLayout>
</FrameLayout>