<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".Fragment.OffFragment">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/tv_off_title"
			android:theme="@style/TextThemeTitle"
			style="@style/TextThemeTitle"
			android:text="운행을 시작하시겠습니까?"
			android:layout_marginTop="62.5dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
		/>

		<TextView
			android:theme="@style/TextThemeSub"
			style="@style/TextThemeSub"
			android:text="버튼을 누르시면, GPS가 자동으로 켜집니다."
			app:layout_constraintTop_toBottomOf="@id/tv_off_title"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:id="@+id/tv_off_sub" />

		<TextView
			android:id="@+id/tv_route_off"
			android:layout_width="109dp"
			android:layout_height="34dp"
			android:layout_marginTop="16.5dp"
			android:gravity="center"
			android:text="송내"
			android:textColor="#fff"
			android:textSize="15sp"
			android:background="@drawable/round_rectangle_29dp"
			app:layout_constraintTop_toBottomOf="@+id/tv_off_sub"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />

		<ImageButton
			android:id="@+id/btn_off"
			android:src="@drawable/off_btn"
			android:layout_width="283dp"
			android:layout_height="283dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#00ffffff"
			android:layout_marginTop="41.5dp"
			app:layout_constraintTop_toBottomOf="@+id/tv_route_off" />

		<TextView
			android:id="@+id/tv_off"
			android:layout_width="wrap_content"
			android:layout_height="41dp"
			android:text="OFF"
			android:textSize="30sp"
			android:textColor="@color/baby_blue"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginBottom="62.5dp"
			app:layout_constraintBottom_toBottomOf="parent" />

		<ImageButton
			android:src="@drawable/back_arrow"
			android:layout_width="43dp"
			android:layout_height="43dp"
			android:id="@+id/iv_back"
			android:background="#00ffffff"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

	</android.support.constraint.ConstraintLayout>
</FrameLayout>