<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:app="http://schemas.android.com/apk/res-auto"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 tools:context=".Fragment.OnFragment">

	<android.support.constraint.ConstraintLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<TextView
			android:id="@+id/tv_on_title"
			android:theme="@style/TextThemeTitle"
			style="@style/TextThemeTitle"
			android:text="운행을 종료하시겠습니까?"
			android:layout_marginTop="62.5dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
		/>

        <TextView android:theme="@style/TextThemeSub"
            style="@style/TextThemeSub"
            android:text="버튼을 다시 누르시면, GPS가 자동으로 꺼집니다."
            app:layout_constraintTop_toBottomOf="@id/tv_on_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_on_sub" />

        <ImageButton
            android:id="@+id/btn_on"
            android:src="@drawable/on_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="84.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_on_sub" />

        <TextView android:id="@+id/tv_on"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="ON"
            android:textSize="30sp"
            android:textColor="@color/bright_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="112.5dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>