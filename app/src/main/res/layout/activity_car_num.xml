<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CarNum"
    >

    <ImageButton
        android:src="@drawable/back_arrow"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/iv_num_back"
        android:background="#00ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="83.5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
    >

        <TextView
            android:theme="@style/TextThemeTitle"
            style="@style/TextThemeTitle"
            android:layout_height="wrap_content"
            android:text="현재 이용하시는"
        />

        <TextView
            android:id="@+id/tv_car_num"
            android:theme="@style/TextThemeTitle"
            style="@style/TextThemeTitle"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

        <EditText
            android:id="@+id/et_car_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="예) 서울 12가 3456"
            android:textColorHint="#a1a1a1"
            android:textColor="#000"
            android:textSize="18sp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingStart="23.6dp"
            android:fontFamily="@font/notosans_light"
            android:background="@drawable/round_rectangle_29dp_edit"
            android:layout_marginTop="58.5dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
        />

        <Button
            android:id="@+id/btn_car_next"
            android:layout_width="118.2dp"
            android:layout_height="56dp"
            android:text="다음"
            android:textSize="21sp"
            android:textColor="#fff"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_rectangle_29dp" />

    </LinearLayout>

    <TextView android:id="@+id/tv_car_num_next"
        android:layout_width="103dp"
        android:layout_height="57dp"
        android:text="건너뛰기"
        android:gravity="center"
        android:textColor="@color/bright_blue"
        android:textSize="15sp"
        android:fontFamily="@font/notosans_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>