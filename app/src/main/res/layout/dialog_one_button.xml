<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="232.3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_rectangle_12dp">

    <TextView
        android:id="@+id/tv_one_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="12.6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="안내"
        android:textSize="21sp"
        android:textColor="#000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="105.6dp"
        android:textColor="@color/greyish_brown"
        android:textSize="18sp"
        android:gravity="center"
        android:text="GPS가 꺼져있습니다\n\n 확인 버튼을 누르면\n 설정화면으로 이동합니다."
        android:layout_marginTop="20.1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_one_dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#cccccc"
        android:layout_marginBottom="49.2dp"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="6.9dp"
        android:layout_marginEnd="6.9dp"
        android:layout_marginBottom="1dp"
    >
        <Button
            android:id="@+id/btn_one_dialog_ok"
            android:theme="@style/TextThemeDialogButton"
            style="@style/TextThemeDialogButton"
            android:text="확인"
            android:background="?android:attr/selectableItemBackground"
        />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>