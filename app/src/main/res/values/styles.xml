<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:colorControlHighlight">@color/bright_blue</item>

         <!--Status Bar-->
        <item name="android:statusBarColor">@color/background_white</item>

        <item name="android:textViewStyle">@style/NotoSansTextStyle</item>
    </style>

    <style name="NotoSansTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/busfont</item>
    </style>


    <style name="TextThemeTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/bright_blue</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/busfont</item>
    </style>

    <style name="TextThemeSub" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/busfont</item>
    </style>

    <style name="TextThemeDialogButton" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/bright_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/busfont</item>
    </style>

    <style name="statusBarBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/bright_blue</item>
    </style>

</resources>
